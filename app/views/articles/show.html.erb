<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <article>
        <h1>
          <%=@article.title%>

          <small>
            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_article_path %>
            <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %>
          </small>
        </h1>
        <p><%= @article.content %></p>
      </article>
    </div>
  </div>
</div>
